# Server Configuration
PORT=6969
NODE_ENV=development
SERVER_URL=http://localhost:6969

# CORS Origins (phân cách bằng dấu phẩy nếu nhiều origins)
CORS_ORIGIN=http://localhost:5173

# Database Configuration (Local development)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_DATABASE=bustracking

# Database Configuration (Railway - tự động cung cấp)
# Railway sẽ tự động tạo các biến này:
# MYSQLHOST=containers-us-west-xxx.railway.app
# MYSQLPORT=3306
# MYSQLUSER=root
# MYSQLPASSWORD=xxxxxxxxxxxxx
# MYSQLDATABASE=railway

# Database Pool Settings
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# JWT Secret (tạo chuỗi random mạnh cho production)
JWT_SECRET=your_strong_secret_key_for_hashing

# Session Secret
SESSION_SECRET=your_session_secret_key

# External APIs (optional)
MAPBOX_ACCESS_TOKEN=

# Logging
LOG_LEVEL=info
